{
    "name": "awssat/tailwindo",
    "description": "Convert Bootstrap CSS to Tailwind CSS",
    "keywords": [
    "CSS",
    "Tailwind",
    "Bootstrap"
    ],
    "homepage": "https://github.com/awssat/tailwindo",
    "license": "MIT",
    "authors": [
        {
            "name": "Awssat",
            "email": "hello@awssat.com"
        }
    ],

    "require": {
        "php" : "~7.0",
        "symfony/console": "^3.0 || ^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4"
    },
    
    "autoload": {
        "psr-4": {
            "Awssat\\Tailwindo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Awssat\\Tailwindo\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "bin": [
        "tailwindo"
    ]
}
